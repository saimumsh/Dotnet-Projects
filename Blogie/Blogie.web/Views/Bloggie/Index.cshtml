@model List<Blogie.core.BlogInfo.BlogData>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="d-flex flex-column overflow-hidden overflow-auto">
    <div class="d-flex flex-row justify-content-between mb-2ss">
        <div class="d-flex ">Create Blog</div>
        <div class="d-flex "><a asp-controller="Bloggie" asp-action="Create" class="btn btn-success">Create</a></div>
        
    </div>
    <hr />
    @foreach (var i in Model)   
    {
        <div class="container mb-4">
            <div class="row justify-content-center mb-4">
                <div class="col-sm-3 col-lg-6 card mb-1">
                    <img class="card-img-top" style="height:25rem" src="@i.Thumnail" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@i.Title</h5>
                        <p class="card-text">@i.Summary</p>
                        <div class="row"><a asp-controller="Bloggie" asp-action="ShowDetails" asp-route-id="@i.Id" class="">In Details</a></div>
                        <p class="card-text"><small class="text-muted">Written by</small></p>
                        <p>@i.Name</p>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-sm-3 col-lg-6">
                        <div class="row mb-1"><a asp-controller="Bloggie" asp-action="Update" asp-route-id="@i.Id" class="btn btn-secondary">Edit</a></div>
                        <div class="row"><a asp-controller="Bloggie" asp-action="Delete" asp-route-id="@i.Id" class="btn btn-danger">Delete</a></div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

